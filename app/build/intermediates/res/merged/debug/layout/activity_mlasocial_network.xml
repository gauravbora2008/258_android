<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_social_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.paril.mlaclientapp.ui.activity.MLASocialNetwork">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="55dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:text="CSC258 - Social Network App"
            android:textAlignment="center"
            android:textColor="#333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="55dp"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/register_screen_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="@string/sn_register_enter_name"
            android:inputType="textPersonName"
            android:text="Gaurav" />

        <EditText
            android:id="@+id/register_screen_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="@string/sn_register_enter_email"
            android:inputType="textEmailAddress"
            android:text="gaurav@bora.com" />

        <EditText
            android:id="@+id/register_screen_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="@string/sn_register_enter_password"
            android:inputType="textPassword"
            android:text="passtest" />

        <Button
            android:id="@+id/register_screen_register_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Already Registered?" />

            <Button
                android:id="@+id/register_screen_login_btn"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Login"
                android:textSize="15dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/register_screen_public_Key"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Public Key:" />

                <TextView
                    android:id="@+id/register_screen_private_Key"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Private Key:" />

                <TextView
                    android:id="@+id/register_screen_secret_key"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Secret Key:" />

                <TextView
                    android:id="@+id/register_screen_group_Key"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Group Key:" />

                <TextView
                    android:id="@+id/register_screen_group_key_enc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="register_screen_group_key_enc" />

                <TextView
                    android:id="@+id/register_screen_post_response"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/register_screen_group_key_dec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="register_screen_group_key_dec" />

                <TextView
                    android:id="@+id/register_screen_sample_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Sample Post:" />

                <TextView
                    android:id="@+id/register_screen_post_dec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Secret Key:" />

                <TextView
                    android:id="@+id/register_screen_post_enc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="Secret Key:" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
